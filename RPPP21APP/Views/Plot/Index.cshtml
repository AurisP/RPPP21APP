@model IEnumerable<Plot>

<p>
    <a asp-controller="Plot" asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<div class="table-responsive">
    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Area)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Coordinates)
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Area)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Coordinates)
                    </td>
                    <td>
                        <a asp-controller="Plot" asp-action="Detail" asp-route-id="@item.PlotId" class="btn btn-secondary mr-2">Details</a>
                        <a asp-controller="Plot" asp-action="Edit" asp-route-id="@item.PlotId" class="btn btn-danger">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
