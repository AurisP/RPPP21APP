@model IEnumerable<Plot>



<h1>Plots</h1>

<p>
    <a asp-controller="Plot" asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="table-responsive page" align="left">
    <table class="table table-hover table-dark" id="data" align="center">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Area)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Coordinates)
                </th>
                <th>
                    @Html.DisplayName("Infrastructure")
                </th>
                <th scope="row"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Area)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Coordinates)
                    </td>
                    <td>
                     @foreach (var item2 in item.Infrastructures.Take(3))
                    {

                            @Html.DisplayFor(modelItem => item2.Name)
                            <span>|</span>
                    }
                    </td>
                    
                    <td>
                        <a asp-controller="Plot" asp-action="Detail" asp-route-id="@item.PlotId" class="btn btn-secondary mr-2">Details</a>
                        <a asp-controller="Plot" asp-action="Edit" asp-route-id="@item.PlotId" class="btn btn-secondary mr-2">Edit</a>
                        <a asp-controller="Plot" asp-action="Delete" asp-route-id="@item.PlotId" class="btn btn-danger">Delete</a>
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </br>
    <button onclick="ExportToExcel('xlsx')" class="btn btn-warning">Export table to excel</button>
</div>
<!--FOR DOWNLOADING TO EXCEL-->
