@{
}
<form method="post" asp-action="Create" enctype="multipart/form-data">
    
    <div class="form-group" style="margin-top:90px">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" aria-describedby="emailHelp" placeholder="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Coordinates">Coordinates</label>
        <input asp-for="Coordinates" class="form-control" aria-describedby="emailHelp" placeholder="Coordinates">
        <span asp-validation-for="Coordinates" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Area">Area</label>
        <input asp-for="Area" class="form-control" aria-describedby="emailHelp" placeholder="Image">
        <span asp-validation-for="Area" class="text-danger"></span>
    </div>
    <div class="form group">
        <label asp-for="WeatherConditionsId">WeatherCondition</label>
        <select asp-for="WeatherConditionsId" asp-items="@(new SelectList(Model.WeatherConditions, "WeatherConditionsId","SunLevel"))" class="form-control form-control">
            <option>Please select one</option>
    </select>
        <span asp-validation-for="WeatherConditions" class="text-danger"></span>
        
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>