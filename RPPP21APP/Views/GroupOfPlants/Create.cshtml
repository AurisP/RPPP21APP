@using RPPP21APP.ViewModels;
@model CreateGroupViewModel


<h1>Create</h1>

<h4>Group</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
           @* <div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="form-group">
                <label asp-for="PlotId" class="control-label">Plot</label>
                <select asp-for="PlotId" class="form-control" asp-items="@(new SelectList(Model.Plots,"PlotId","Name"))" class="form-control form-control">
            <option>Please select one</option>
                <span asp-validation-for="Plots" class="text-danger"></span>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="PlantTypeId" class="control-label">Plant Type</label>
                <select asp-for="PlantTypeId" class="form-control" asp-items="@(new SelectList(Model.PlantTypes,"PlantTypeId","Type"))" class="form-control form-control">
                <option>Please select one</option>
                <span asp-validation-for="PlantTypes" class="text-danger"></span>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="GroupsOnPlot.PlantTime" class="control-label">Plant time</label>
                <input asp-for="GroupsOnPlot.PlantTime" class="form-control" />
                <span asp-validation-for="GroupsOnPlot.PlantTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupsOnPlot.Quantity" class="control-label">Quantity</label>
                <input asp-for="GroupsOnPlot.Quantity" class="form-control" />
                <span asp-validation-for="GroupsOnPlot.Quantity" class="text-danger"></span>
            </div>           
            <p>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </p>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary mr-2">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}