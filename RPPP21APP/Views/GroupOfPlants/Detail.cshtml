@{
}
<div class="p-5 mb-4 bg-light rounded-3">
    <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">@Model.PlantType.Type</h1>
        <p class="col-md-8 fs-4"> Calories: @Model.PlantType.CaloriesPer100g</p>
        <p class="col-md-8 fs-4"> Fat: @Model.PlantType.FatPer100g</p>
        <p class="col-md-8 fs-4"> Protein: @Model.PlantType.ProteinPer100g</p>
        <p class="col-md-8 fs-4"> Carbs: @Model.PlantType.CarbsPer100g</p>
        <p class="col-md-8 fs-4"> Fiber: @Model.PlantType.FiberPer100g</p>
        <p class="col-md-8 fs-4"> Plant Time: @Model.GroupsOnPlot.PlantTime</p>
        <p class="col-md-8 fs-4"> Plant Time: @Model.GroupsOnPlot.Quantity</p>
       
        <button class="btn btn-primary btn-lg" type="button">Example button</button>
    </div>
</div>