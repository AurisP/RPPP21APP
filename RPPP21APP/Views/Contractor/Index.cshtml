@model IEnumerable<RPPP21APP.Models.Contractor>

@{
    ViewData["Title"] = "Index";
}

<h1>Contractors</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<a asp-controller="Contract" asp-action="Index" class="btn btn-secondary mr-2">Back to Contracts</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ContractorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(model => item.ContractorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ContractorId" class="btn btn-secondary mr-2">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.ContractorId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
