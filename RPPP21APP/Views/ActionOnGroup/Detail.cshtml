@model RPPP21APP.Models.ActionOnGroup

@{
    ViewData["Title"] = "Details";
}

<h1>Action Details</h1>

<div class="p-1 mb-2 rounded-3">
    <div class="container-fluid py-5">       
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Time)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Time)
            </dd>
            <dt class="col-sm-4">
                Quantity
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.QuantityIfHarvest)
            </dd>
            <dt class="col-sm-4">
                Action Description
            </dt>
            <dd class="col-sm-10">
                 @Html.DisplayFor(model => model.Action.Description)
            </dd>
            <dt class="col-sm-4">
                Material use amount
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MaterialUse.Amount)
            </dd>
            <dt class="col-sm-4">
                @*@Html.DisplayNameFor(model => model.Contractor)*@
                Current material amount in storage
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MaterialUse.Material.AmountInStorage)                
            </dd>
            <dt class="col-sm-4">
                Worker
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Worker.Name)
                @Html.DisplayFor(model => model.Worker.Surname)
            </dd>
        </dl>
    </div>
</div>