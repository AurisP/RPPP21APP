@using RPPP21APP.ViewModels;
@model CreateActionOnGroupViewModel

<h1>Create</h1>

<h4>Action</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
           @* <div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <input asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityIfHarvest" class="control-label">Quantity when action is harvest</label>
                <input asp-for="QuantityIfHarvest" class="form-control" />
                @*<span asp-validation-for="QuantityIfHarvest" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Storage.Place" class="control-label">Place of storage</label>
                <input asp-for="Storage.Place" class="form-control" />
                <span asp-validation-for="Storage.Place" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActionM.Description" class="control-label">Action description</label>
                <input asp-for="ActionM.Description" class="form-control" />
                <span asp-validation-for="ActionM.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkerId" class="control-label">Worker name</label>
                <select asp-for="WorkerId" class="form-control" asp-items="@(new SelectList(Model.Workers,"WorkerId","Name"))" class="form-control form-control">
            <option>Please select one</option>
                    <span asp-validation-for="Workers" class="text-danger"></span>
            </select>
            </div>
            <div class="form-group">
                <label asp-for="MaterialId" class="control-label">Material used</label>
                <select asp-for="MaterialId" class="form-control" asp-items="@(new SelectList(Model.Materials,"MaterialId","Name"))" class="form-control form-control">
                    <option>Please select one</option>
                    <span asp-validation-for="Materials" class="text-danger"></span>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="materialUse.Amount" class="control-label">Amount of material</label>
                <input asp-for="materialUse.Amount" class="form-control" />
                <span asp-validation-for="materialUse.Amount" class="text-danger"></span>
            </div>            
            <p>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </p>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary mr-2">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}