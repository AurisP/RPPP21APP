@model RPPP21APP.Models.Lease

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Lease</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LeaseId" />
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContractId" class="control-label"></label>
                <select asp-for="ContractId" class="form-control" asp-items="ViewBag.ContractId"></select>
                <span asp-validation-for="ContractId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LeaseTypeId" class="control-label"></label>
                <select asp-for="LeaseTypeId" class="form-control" asp-items="ViewBag.LeaseTypeId"></select>
                <span asp-validation-for="LeaseTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlotId" class="control-label"></label>
                <select asp-for="PlotId" class="form-control" asp-items="ViewBag.PlotId"></select>
                <span asp-validation-for="PlotId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

