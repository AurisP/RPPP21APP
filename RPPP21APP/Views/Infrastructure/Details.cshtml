@model RPPP21APP.Models.Infrastructure

@{
    ViewData["Title"] = "Details";
}
@{

    var date = TempData["DateOfDestruction"] as DateTime?;
    var reason = TempData["ReasonOfDestruction"] as string;
    var cost = TempData["CostOfDestruction"] as decimal?;
    var earnings = TempData["EarningsOnMaterials"] as decimal?;
}

<h1>Details</h1>

<div>
    <h4>Infrastructure</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BuildDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BuildDate)
        </dd>

        <dt class = "col-sm-2">
            Date of Destruction
        </dt>
        <dd class = "col-sm-10">
            @date
        </dd>



        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd>

        <dt class = "col-sm-2">
            Cost of Destruction
        </dt>
      <dd class = "col-sm-10">
            @cost
        </dd>

        <dt class = "col-sm-2">
            Earnings on Destruction
        </dt>
        <dd class = "col-sm-10">
            @earnings
        </dd>


        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Plot)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Plot.Name)
        </dd>

        <dt class="col-sm-2">
            Reason of Destruction
        </dt>
        <dd class="col-sm-10">
            @reason
        </dd>

    </dl>

</div>
<div>
    
    <a aasp-controller="HistoricalInfrastructure" asp-action="Index" class="btn btn-warning" >Back to List</a>
</div>
