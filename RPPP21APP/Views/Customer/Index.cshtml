@model IEnumerable<RPPP21APP.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
    <a asp-controller="Reservation" asp-action="Index" class="btn btn-warning">See Reservations</a>
    <a asp-controller="Reservation" asp-action="Create" class="btn btn-primary">Create New Reservation</a>
</p>
<div class="table-responsive">
    <table class="table table-hover table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                        <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-secondary" >Edit</a>
                    <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-warning">Details[NOT YET]</a>
                        <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>